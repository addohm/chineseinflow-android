<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context="com.gamestolearnenglish.chineseinflow.MenuActivity">

    <TextView
        android:id="@+id/activityMenuTitleText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:gravity="center"
        android:text="Characters 1-30"
        android:shadowColor="#000"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="0.1"
        android:textColor="#fff"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:weightSum="3.4"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activityMenuStat00"
            android:text="Total character views"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16sp"
            android:textColor="#fff"
            android:shadowColor="#000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="0.1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/activityMenuStat01"
            android:text="30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:textSize="16sp"
            android:textColor="#fff"
            android:shadowColor="#000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="0.1"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:weightSum="3.4"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activityMenuStat10"
            android:text="Avg. views per character"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16sp"
            android:textColor="#fff"
            android:shadowColor="#000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="0.1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/activityMenuStat11"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:textSize="16sp"
            android:textColor="#fff"
            android:shadowColor="#000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="0.1"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:weightSum="3.4"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activityMenuStat20"
            android:text="Total time spent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="16sp"
            android:textColor="#fff"
            android:shadowColor="#000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="0.1"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/activityMenuStat21"
            android:text="0s"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:textSize="16sp"
            android:textColor="#fff"
            android:shadowColor="#000"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="0.1"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:gravity="center"
        >
        <Button
            android:id="@+id/activityMenuLearnButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/blank_button_selector"
            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:onClick="learnClick"
            android:text="Learn"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:gravity="center"
        >
        <Button
            android:id="@+id/activityMenuPracticeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/blank_button_selector"
            android:textColor="#fff"
            android:gravity="center"
            android:onClick="practiceClick"
            android:textSize="18sp"
            android:text="Practice"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        >
        <Button
            android:id="@+id/activityMenuReviewButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@drawable/blank_button_selector"
            android:textColor="#fff"
            android:textSize="18sp"
            android:gravity="center"
            android:onClick="reviewClick"
            android:text="Review"
            />
    </LinearLayout>

</LinearLayout>
